                                                </Grid>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </TextBox.Resources>
                            <TextBox.Style>
                                <StaticResource ResourceKey="TextBoxStyle1"/>
                            </TextBox.Style>
                        </TextBox>
                    </Grid>

                </Grid>
            </Pivot.Title>

