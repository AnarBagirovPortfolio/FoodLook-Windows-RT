                <ScrollViewer x:Name="Scroll" ScrollViewer.HorizontalScrollMode="Disabled" ViewChanged="ScrollViewer_ViewChanged">
                    <ListView x:Name="AnswerListView" ItemsSource="{Binding SearchResults}" IsItemClickEnabled="True" Padding="0,0,0,60" ScrollViewer.VerticalScrollMode="Disabled" ItemClick="ListView_ItemClick" ItemTemplate="{StaticResource DataTemplate1}"/>
                </ScrollViewer>                

            </PivotItem>

        </Pivot>

    </Grid>
    
