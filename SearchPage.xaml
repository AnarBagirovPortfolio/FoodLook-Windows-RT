                <AppBarButton x:Name="ByPlaceButton" x:Uid="ByPlaceButton" Label="по растоянию от меня" Visibility="Visible" Click="ByPlaceButton_Click"/>
            </CommandBar.SecondaryCommands>
        </CommandBar>
    </Page.BottomAppBar>
</Page>
